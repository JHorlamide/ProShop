{
	"name": "server",
	"version": "1.0.0",
	"description": "mini E-commerce shop",
	"main": "server.js",
	"type": "module",
	"engines": {
		"node": "15.5.0",
		"npm": "7.22.0"
	},
	"scripts": {
		"start": "node server.js",
		"server": "nodemon server.js",
		"client": "npm start --prefix ../frontend/",
		"dev": "concurrently \"npm run server \" \"npm run client\"",
		"data:import": "node seeder.js",
		"data:destroy": "node seeder.js -d",
		"heroku-postbuild": "cd frontend && npm install && npm run build"
	},
	"author": "JHorlamide",
	"license": "ISC",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"colors": "^1.4.0",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"joi": "^17.4.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.12.14",
		"morgan": "^1.10.0",
		"multer": "^1.4.3"
	},
	"devDependencies": {
		"concurrently": "^6.2.0"
	}
}
